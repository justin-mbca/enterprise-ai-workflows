{
  "name": "enterprise-ai-workflows",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {},
  "forwardPorts": [5000, 8000, 8888],
  "portsAttributes": {
    "5000": { "label": "MLflow", "protocol": "http", "visibility": "public" },
    "8000": { "label": "Model API", "protocol": "http", "visibility": "public" },
    "8888": { "label": "Jupyter", "protocol": "http", "visibility": "public" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "onCreateCommand": "pip install --no-cache-dir mlflow jupyter fastapi uvicorn[standard] pandas numpy scikit-learn pydantic requests",
  "postCreateCommand": "echo 'Run: bash project2-mlops-pipeline/scripts/start-mlops-nodocker.sh'",
  "remoteUser": "vscode"
}
